        <!-- Template Javascript -->
        <script>
let totalAmount = 0;

let cart = [];

function addToCart(productName, productPrice, button) {
    if (cart.some(item => item.name === productName)) {
        alert(`${productName} cannot be repeated. It is already in your cart.`);
        return;
    }

    const cartItems = document.getElementById('cart-items');

    const listItem = document.createElement('li');
    
    listItem.innerHTML = `${productName} - ₹${productPrice.toFixed(2)} <button class="remove-btn" onclick="removeFromCart('${productName}', ${productPrice}, this)">Remove</button>`;

    cartItems.appendChild(listItem);

    totalAmount += productPrice;

    document.getElementById('total-amount').textContent = `Total: ₹${totalAmount.toFixed(2)}`;

    button.disabled = true;

    cart.push({ name: productName, button: button });
}


function removeFromCart(productName, productPrice, removeButton) {
    removeButton.parentElement.remove();

    totalAmount -= productPrice;

    document.getElementById('total-amount').textContent = `Total: $${totalAmount.toFixed(2)}`;

    const itemIndex = cart.findIndex(item => item.name === productName);
    if (itemIndex > -1) {
        cart[itemIndex].button.disabled = false; // Re-enable the button
        cart.splice(itemIndex, 1); // Remove the item from the cart array
    }
}

function getTotalAmountFromURL() {
    const urlParams = new URLSearchParams(window.location.search);
    const totalAmount = urlParams.get('total');
    return totalAmount ? parseFloat(totalAmount) : 0;
}

function updateBillingPageTotal() {
    const totalAmount = getTotalAmountFromURL();
    
    document.getElementById('subtotal').textContent = `₹${totalAmount.toFixed(2)}`;
    document.getElementById('total-amount').textContent = `₹${(totalAmount + 20).toFixed(2)}`; // Assuming ₹20 is the tax or additional fee
}

if (window.location.pathname.endsWith('/billing')) {
    updateBillingPageTotal();
}   

function redirectToPayment() {
    window.location.href = `/billing?total=${totalAmount.toFixed(2)}`;
}
